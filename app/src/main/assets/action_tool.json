{
  "schema_version": "1.0",
  "kind": "action_tools",
  "tool_call_format": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "arguments": { "type": "object" }
      },
      "required": ["name", "arguments"],
      "additionalProperties": false
    }
  },
  "tools": [
    {
      "name": "trigger_steering_vibration",
      "description": "Trigger steering wheel vibration.",
      "parameters": {
        "type": "object",
        "properties": {
          "intensity": { "type": "string", "enum": ["low", "medium", "high"] }
        },
        "required": ["intensity"],
        "additionalProperties": false
      }
    },
    {
      "name": "trigger_navigation_notification",
      "description": "Show navigation warning notification.",
      "parameters": {
        "type": "object",
        "properties": {
          "message": { "type": "string", "minLength": 1, "maxLength": 120 },
          "level": { "type": "string", "enum": ["info", "warning", "critical"] }
        },
        "required": ["message", "level"],
        "additionalProperties": false
      }
    },
    {
      "name": "trigger_drowsiness_alert_sound",
      "description": "Play drowsiness alert sound.",
      "parameters": {
        "type": "object",
        "properties": {
          "volume_percent": { "type": "integer", "minimum": 0, "maximum": 100 }
        },
        "required": ["volume_percent"],
        "additionalProperties": false
      }
    },
    {
      "name": "trigger_cluster_visual_warning",
      "description": "Display visual warning on cluster.",
      "parameters": {
        "type": "object",
        "properties": {
          "message": { "type": "string", "minLength": 1, "maxLength": 120 },
          "level": { "type": "string", "enum": ["normal", "warning", "critical"] }
        },
        "required": ["message", "level"],
        "additionalProperties": false
      }
    },
    {
      "name": "trigger_hud_warning",
      "description": "Display HUD warning.",
      "parameters": {
        "type": "object",
        "properties": {
          "message": { "type": "string", "minLength": 1, "maxLength": 120 },
          "level": { "type": "string", "enum": ["normal", "warning", "critical"] }
        },
        "required": ["message", "level"],
        "additionalProperties": false
      }
    },
    {
      "name": "trigger_voice_prompt",
      "description": "Play voice prompt to driver.",
      "parameters": {
        "type": "object",
        "properties": {
          "message": { "type": "string", "minLength": 1, "maxLength": 200 },
          "level": { "type": "string", "enum": ["normal", "warning", "critical"] }
        },
        "required": ["message", "level"],
        "additionalProperties": false
      }
    },
    {
      "name": "escalate_warning_level",
      "description": "Escalate system warning level.",
      "parameters": {
        "type": "object",
        "properties": {
          "level": { "type": "string", "enum": ["normal", "warning", "critical"] }
        },
        "required": ["level"],
        "additionalProperties": false
      }
    },
    {
      "name": "trigger_rest_recommendation",
      "description": "Recommend rest to driver.",
      "parameters": {
        "type": "object",
        "properties": {
          "reason": { "type": "string", "minLength": 1, "maxLength": 120 }
        },
        "required": ["reason"],
        "additionalProperties": false
      }
    },
    {
      "name": "log_safety_event",
      "description": "Log safety-related event.",
      "parameters": {
        "type": "object",
        "properties": {
          "message": { "type": "string", "minLength": 1, "maxLength": 200 },
          "detail": { "type": "string", "maxLength": 200 },
          "count": { "type": "integer", "minimum": 0, "maximum": 1000 }
        },
        "required": ["message"],
        "additionalProperties": false
      }
    },
    {
      "name": "request_safe_mode",
      "description": "Request vehicle to enter safe mode.",
      "parameters": {
        "type": "object",
        "properties": {
          "reason": { "type": "string", "minLength": 1, "maxLength": 120 }
        },
        "required": ["reason"],
        "additionalProperties": false
      }
    }
  ]
}
